{
  "parser": "babel-eslint",
  "extends": ["airbnb-base", "prettier"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": ["error", { "singleQuote": true, "printWidth": 80 }],
    "max-len": [
      "error",
      {
        "code": 120,
        "ignoreComments": true,
        "ignoreTrailingComments": true,
        "ignoreStrings": true
      }
    ],
    "global-require": 0,
    "no-console": 0,
    "no-bitwise": 0,
    "camelcase": 0,
    "no-unused-vars": 1,
    "func-names": 0,
    "linebreak-style": 0,
    "no-underscore-dangle": 0,
    "arrow-parens": 0,
    "no-plusplus": 0
  }
}
