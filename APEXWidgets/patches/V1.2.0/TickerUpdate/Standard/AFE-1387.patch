+           clearInterval(timer_tickerScroll);
+
+           Ticker_Scroll();
+       } else {
+           scroll_translateX--; 
+           $(tickersInner).css({transform: 'translateX('+ (scroll_translateX) +"px" +')'});
+       }
+   }
+
+    ticker_TickerScroll_running = false;
+}
